{
  "$schema": "https://biomejs.dev/schemas/1.5.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "./turbo.json",
      "*/dist/**",
      "*/codegen/digestComponents.ts",
      "*/codegen/digestContext.ts",
      "*/.next/**/*",
      "*/.vscode/**/*",
      "./apps/admin/src/routeTree.gen.ts",
      "./apps/backend/.nitro/**/*",
      "./apps/backend/.output/**/*",
      "./apps/mobile/ignite/**",
      "./apps/mobile/android/**",
      "./apps/mobile/ios/**",
      "./apps/mobile/plugins/*"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noArrayIndexKey": "warn"
      },
      "a11y": {
        "noSvgWithoutTitle": "off"
      }
    }
  },
  "overrides": []
}
